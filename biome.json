{
	"$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"performance": {
				"noDelete": "off"
			},
			"security": {
				"noGlobalEval": "off"
			},
			"style": {
				"noNonNullAssertion": "off"
			},
			"suspicious": {
				"noAssignInExpressions": "off",
				"noExplicitAny": "off"
			},
			"complexity": {
				"noCommaOperator": "off",
				"noForEach": "error",
				"noUselessStringConcat": "warn"
			}
		}
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"files": {
		"includes": ["**/*.*", "!tmp", "!temp", "!node_modules"]
	}
}
